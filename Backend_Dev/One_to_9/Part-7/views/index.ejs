<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white">
    <!-- Main Container -->
    <div class="main w-full min-h-screen flex items-center justify-center">
        <div class="form bg-zinc-800 p-8 rounded-lg shadow-lg w-full max-w-md">
            <!-- Title -->
            <h1 class="text-2xl font-bold text-center mb-4">Task Manager</h1>

            <!-- Task Form -->
            <form action="/create" method="post" class="space-y-4">
                <input type="text"
                    class="w-full rounded-lg px-5 py-3 bg-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Task Title" name="title" />
                <textarea rows="3"
                    class="w-full rounded-lg px-5 py-3 bg-zinc-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500"
                    placeholder="Task Description" name="details"></textarea>
                <input type="submit" value="Create Task"
                    class="w-full bg-blue-500 hover:bg-blue-600 transition duration-200 text-white font-semibold py-3 rounded-lg cursor-pointer" />
            </form>

            <!-- Task List -->
            <div class="tasks mt-6 space-y-4">
                <% if (files && files.length> 0) { %>
                    <% files.forEach(function(file) { %>
                        <div class="task-item bg-zinc-700 p-4 rounded-lg shadow flex justify-between items-start">
                            <div>
                                <h2 class="text-lg font-semibold">
                                    <%= file.replace('.txt', '' ) %>
                                </h2> <!-- Show task title -->
                                <a href="/view/<%= file %>" class="text-blue-600 inline-block mt-3">
                                    Read more
                                </a>

                            </div>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <!-- Render a message if there are no files -->
                                <h3 class="text-zinc-600">No tasks yet</h3>
                                <% } %>
            </div>
        </div>
    </div>
</body>

</html>