<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body class="bg-zinc-900 text-white">
    <div class="min-h-screen flex items-center justify-center">
        <div class="w-full max-w-md bg-gray-800 p-8 rounded-lg shadow-lg">
            <h1 class="text-2xl font-bold text-center mb-6">Create User</h1>
            <form action="" class="space-y-4">
                <!-- Name Input -->
                <div>
                    <label for="name" class="block text-sm font-medium mb-1">Name</label>
                    <input 
                        id="name" 
                        type="text" 
                        placeholder="Enter your name" 
                        class="w-full px-4 py-3 bg-transparent border border-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    >
                </div>
                <!-- Email Input -->
                <div>
                    <label for="email" class="block text-sm font-medium mb-1">Email</label>
                    <input 
                        id="email" 
                        type="email" 
                        placeholder="Enter your email" 
                        class="w-full px-4 py-3 bg-transparent border border-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    >
                </div>
                <!-- Image URL Input -->
                <div>
                    <label for="img" class="block text-sm font-medium mb-1">Image URL</label>
                    <input 
                        id="img" 
                        type="text" 
                        placeholder="Enter image URL" 
                        class="w-full px-4 py-3 bg-transparent border border-gray-700 rounded-lg text-white focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    >
                </div>
                <!-- Submit Button -->
                <div>
                    <input 
                        type="submit" 
                        value="Create User" 
                        class="w-full bg-indigo-600 hover:bg-indigo-500 text-white py-3 rounded-lg font-semibold cursor-pointer transition"
                    >
                </div>
            </form>
        </div>
    </div>
</body>
</html>
